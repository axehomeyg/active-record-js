{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src/",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "noImplicitAny": false,
        "outDir": "./dist",
        "removeComments": false,
        "rootDir": "./src/",
        "sourceMap": false,
        "target": "es6"
    },
    "exclude": [
        "node_modules",
        ".npm",
        "dist",
        "tests",
    ]
}
